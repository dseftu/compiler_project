/* An example that should cycle through much of the grammar */
const c1 = 3, c2 = 1;
var x, y, i, r;
begin
	y := 3;
	x := y + 56;
	write x;
	read i;
	if i < 1 then
		i := -50;
	
	while i > 1 do
		i := i - 1;

	write i;

	write x;
	write y;
	read r;
	write r;

	r := r * 2;
	write r;
	r := r / 2;
	write r;
	r := r + r + r;
	write r;
end.